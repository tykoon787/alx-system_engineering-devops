#!/usr/bin/env bash
# To file or not to file

pwd="$(pwd)"
ls="$(ls "$pwd")"
name_of_file="school"

for filename in $ls
do
    if [ "$filename" == "$name_of_file" ]
    then
        checkfile="$name_of_file"
    fi
done       

if [ -e "$checkfile" ]
then
    echo "$checkfile file exists"
    if [ -s "$checkfile" ]
    then
        echo "$checkfile is not empty"
    else :
        echo "$checkfile is empty"
    fi
    if [ -f "$checkfile" ]
    then
        echo "$checkfile is a regular file"
    fi
else :
    echo "$checkfile does not exist"
fi